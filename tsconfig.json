{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": [
			"ES6",
			"DOM"
		],
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"declaration": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": ["**/*.spec.ts"]
}